@{
}

@model IEnumerable<Team>

<div class="d-grid gap-2">
    <h2>@ViewBag.SelectedTeam</h2>
    <a asp-controller="Home" asp-action="Index" asp-route-teamID="" class="btn btn-outline-secondary">Home</a>
    <br />
    @foreach (var t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-teamID="@t.TeamID"
           class="btn @(ViewBag.SelectedType == t.TeamID.ToString() ? "btn-primary" : "btn-outline-secondary")">@t.TeamName</a>
        <br />
    }
</div>